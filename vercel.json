{
  "version": 2,
  "builds": [
    {
      "src": "frontend/dist",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "outputDirectory": "frontend/dist"
      }
    },
    {
      "src": "backend/api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*\\..*)",
      "dest": "/frontend/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/index.html"
    }
  ]
}