{
  "version": 2,
  "builds": [
    { "src": "backend/package.json", "use": "@vercel/node" },
    {
      "src": "frontend",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "dist" }
    }
  ],
  "outputDirectory": "frontend/dist",
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}