{
  "version": 2,
  "builds": [
    {
      "src": "frontend/",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*\\..*)",
      "destination": "frontend/dist/$1"
    },
    {
      "source": "/(.*)",
      "destination": "frontend/dist/index.html"
    }
  ]
}